# 环境配置示例文件
# 复制此文件为 .env.development 或 .env.production

# =================================
# 环境标识
# =================================
REACT_APP_ENV=development  # development | production

# =================================
# API 配置
# =================================
# 开发环境
REACT_APP_API_URL=http://localhost:5050/api

# 生产环境
# REACT_APP_API_URL=https://your-api-domain.com/api

# API 超时时间（毫秒）
REACT_APP_API_TIMEOUT=10000

# =================================
# Firebase Web SDK 配置
# =================================
REACT_APP_FIREBASE_API_KEY=your_firebase_web_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=000000000000
REACT_APP_FIREBASE_APP_ID=1:000000000000:web:xxxxxxxxxxxxxxxxxxxxxx

# =================================
# 开发配置
# =================================
# 调试模式（开发环境: true, 生产环境: false）
REACT_APP_DEBUG=true

# 生产环境优化（仅生产环境需要）
# GENERATE_SOURCEMAP=false

# =================================
# 注意事项
# =================================
# ⚠️ React 环境变量必须以 REACT_APP_ 开头
# ⚠️ 修改环境变量后需要重启开发服务器
# ⚠️ 不要将敏感信息放在前端环境变量中

